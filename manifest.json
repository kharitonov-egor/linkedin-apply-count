{
    "manifest_version": 3,
    "name": "LinkedIn Apply Count",
    "description": "Shows apply and views count directly in LinkedIn job page UI",
    "version": "1.1.0",
    "content_scripts": [
      {
        "matches": ["*://*.linkedin.com/*"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "host_permissions": ["*://*.linkedin.com/*"],
    "permissions": ["activeTab"]
  }