{
    "manifest_version": 3,
    "name": "LinkedIn Apply Count",
    "description": "Shows apply and viewscount directly in LinkedIn job page UI",
    "version": "1.0.0",
    "content_scripts": [
      {
        "matches": ["*://*.linkedin.com/*"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "host_permissions": ["*://*.linkedin.com/*"],
    "permissions": ["activeTab"]
  }